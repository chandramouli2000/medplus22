<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomheart"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="250dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Home"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="end"
        android:background="@drawable/messenger"
        android:onClick="onnotiy"/>
    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="25dp"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Status"
                android:textSize="24dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onstaus"
                android:orientation="horizontal">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="onstaus"
                    android:background="@drawable/stet"
                    android:layout_marginLeft="20dp"
                    ></Button>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/pulse"
                    android:onClick="onstaus"
                    android:layout_marginLeft="10dp"
                    ></Button>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="onstaus"
                    android:background="@drawable/blood"
                    android:layout_marginLeft="10dp"
                    ></Button>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/ic_baseline_navigate_next_24"
                    android:onClick="onstaus"
                    ></Button>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Diet"
                android:textSize="24dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="ondiet"
                    android:background="@drawable/eggs"

                    android:layout_marginLeft="20dp"
                    ></Button>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="ondiet"
                    android:background="@drawable/fruits"
                    android:layout_marginLeft="10dp"
                    ></Button>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="ondiet"
                    android:background="@drawable/chicken"
                    android:layout_marginLeft="10dp"
                    ></Button>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/ic_baseline_navigate_next_24"
                    android:onClick="ondiet"
                    ></Button>

            </LinearLayout>
        </LinearLayout>













        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"

            android:onClick="OnButtonClick"

            android:layout_gravity="bottom|center"
            android:background="@drawable/rounded_corner1"
            android:backgroundTint="#000000"
            app:fabSize="normal"
            app:layout_anchorGravity="bottom"
            app:srcCompat="@drawable/ic_baseline_local_hospital_24"
            tools:ignore="VectorDrawableCompat" />


    </LinearLayout>



