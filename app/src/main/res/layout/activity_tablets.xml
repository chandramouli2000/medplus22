<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bottomheart"
    tools:context=".tablets">


    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="TABLETS"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="NAME"
            android:textSize="24dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="COUNT"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="PRICE"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="parcetmol"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="10"/>
       <TextView
           android:layout_width="80dp"
           android:layout_height="50dp"
           android:text="50"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="acetaminophen"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="10"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="80"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="carbamazipine"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="10"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="100"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Start Payment"
        android:onClick="startpay"
        android:background="@drawable/rounded_corner"
        android:textSize="20dp"/>




</LinearLayout>